<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "Your Name", autofocus: true %>
 
  </div> 
  
  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: "Choose @username"  %>
  </div> 
  
  <div class="form-group">
    <%= f.label :location %><br />
    <%= f.text_field :location, placeholder: "Where are you from?" %>
  </div> 
  
  <div class="form-group">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, placeholder: "Tell us about yourself"  %>
  </div>

<div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "your@email.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-sucess" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
