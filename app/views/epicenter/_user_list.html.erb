<div class="row">
	<% @users.each do |user| %>
	 <div class = "col-md-3">
	 	<div class = "well">
	 	  <div class = "row">
	 	  <div class = "col-md-6">
	 	  	<% if !user.avatar.file.nil? %>
	 	  		<%= image_tag user.avatar.url, class: "img-responsive" %>
	 	  	<% end %>
	 	  </div>

	 	  <div class = "col-md-6">
	 	  	<p>
	 	  		<% if current_user.id != user.id %>
		<% if current_user.following.include?(user.id) %>
			<%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-success", id:"unfollow_btn" %>
		<% else %>
			<%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-success" %>

		<% end %>
	<% end %>
	 	  	</p>
	 	  </div>
	 	</div>

	 	<div class = "row">
	 		<div class = "col-md-8 offset-md-2">
	 			<%= link_to show_user_path(id: user.id) do %>
	 			<h3><%= user.name %></h3>
	 			<p>@<%= user.username %></p>
	 			<% end %>
	  		<p>
	  			<%= user.bio %>
	  		</p>
	  	</div>
	  </div>
	  </div>
	</div>
  <% end %>
</div>