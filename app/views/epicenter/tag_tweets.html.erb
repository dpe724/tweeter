<h1><%= @tag.phrase %></h1>

<div class="row">
	<div>
		<% @tag.tweets.order(created_at: :desc).each do |tweet| %>
		<p>
			<strong><%= tweet.user.name + " @" + tweet.user.username %></strong>
			<br>
			<%= time_ago_in_words(tweet.created_at) %>
		</p>
		<p>
			<%= tweet.message.html_safe %>
		</p>
		<% end %>
	</div>
</div>

